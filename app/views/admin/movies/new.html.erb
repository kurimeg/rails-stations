<div class="contents__title">
  Movies Create
</div>
<div class="message">
  <%= flash[:danger] %>
<div>
<div class="container__form">
  <%= form_for(@movie, url: "/admin/movies", method: "POST") do |f| %>
    <div>
      <%= f.label :name, "映画タイトル" %>
      <%= f.text_field :name %>
    <div>
    <div>
      <%= f.label :year, "公開年" %>
      <%= f.text_field :year %>
    </div>
    <div>
      <%= f.label :is_showing, "上映中" %>
      <%= f.select :is_showing, @status %>
    </div>
    <div>
      <%= f.label :description, "概要" %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :image_url, "画像URL" %>
      <%= f.text_field :image_url %>
    </div>
    <div>
      <%= f.submit "Save" %>
    </div>
  <% end %>
</div>